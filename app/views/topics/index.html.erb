<div class="topic-index-wrapper">
  <div class="container">
    <div class="input-group">
      <%= search_form_for @q, url: topics_path do |f| %>
        <div><%= f.text_field :user_name_cont ,placeholder: 'ユーザー名', class: 'form-control' %></div>
        <div><%= f.submit ("検索") , class: 'btn btn-default'%></div>
      <% end %>
    </div>
  </div>
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
              <% if !topic.favorite_users.include?(current_user) %>
                <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                   <span class="fa fa-heart like-btn"></span>
                <% end %>
              <% else %>
                <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                  <span class="fa fa-heart like-btn-unlike"></span>
                <% end %>
              <% end %>
              :<%= topic.favorites.count %>
                <%= link_to comments_new_path(topic_id: topic.id), method: :get do %>
                  <span class="far fa-comment comment"></span>
                <% end %>
                <%= link_to topic_path(topic.id), method: :delete do %>
                  <span class="far fa-trash-alt trash"></span>
                <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h4 class="h4">コメント</h4>
            <div>
              <% topic.comments.each do |comment| %>
              <p>
                <%= comment.user.name %>: <%= comment.content %>
              </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>